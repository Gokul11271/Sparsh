{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "https://sparsh-backend.onrender.com/api"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://sparsh-backend.onrender.com/api/:path*"
    }
  ]
}
